{
  "name": "@relational-fabric/howard",
  "version": "0.1.0",
  "description": "The logical engine for a truly relational world",
  "type": "module",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build:adr": "npm-run-all build:adr:toc build:adr:index",
    "build:adr:index": "tsx scripts/generate-adr-index.ts",
    "build:adr:toc": "cd docs/adrs && npx adr generate toc",
    "check:all": "npm-run-all check:lint check:types check:test",
    "check:all:fix": "npm-run-all check:lint:fix check:types check:test",
    "check:lint": "eslint .",
    "check:lint:fix": "eslint . --fix",
    "check:test": "vitest run",
    "check:test:watch": "vitest run --watch",
    "check:test:ui": "vitest run --ui",
    "check:types": "npm run check:types:all",
    "check:types:all": "npm-run-all check:types:src check:types:examples",
    "check:types:examples": "tsc --noEmit --project examples/tsconfig.json",
    "check:types:src": "tsc --noEmit --skipLibCheck",
    "checks": "npm run check:all",
    "dev": "tsx --watch src/index.ts",
    "test": "npm run check:test"
  },
  "keywords": [
    "logic",
    "claims",
    "proofs",
    "curry-howard",
    "type-system",
    "predicates"
  ],
  "author": "Relational Fabric",
  "license": "MIT",
  "dependencies": {
    "@relational-fabric/canon": "^1.2.0"
  },
  "peerDependencies": {
    "@relational-fabric/canon": "^1.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  }
}
