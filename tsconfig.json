{
  "extends": "@relational-fabric/canon/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "node_modules/@relational-fabric/canon/types/**/*.d.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist", "examples"]
}
